<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.OnBoardingActivity">

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.SwitchCompat
            android:layout_marginLeft="10dp"
            android:id="@+id/switchMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             />

        <TextView
            android:id="@+id/skipTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="270dp"
            android:fontFamily="@font/popin_semibold"
            android:text="Skip"
            android:textColor="#D7D7D7"
            android:textSize="18sp" />
    </LinearLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="362dp"
        android:layout_height="455dp"
        android:layout_gravity="center"
        android:layout_marginTop="23dp" />

    <me.relex.circleindicator.CircleIndicator
        android:id="@+id/circle_indicator"
        android:layout_width="62dp"
        android:layout_height="18dp"
        android:layout_gravity="center"
        android:layout_marginTop="17dp"
        app:ci_drawable="@drawable/borderob"

        />

    <TextView
        android:id="@+id/title"
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginEnd="56dp"
        android:fontFamily="@font/popin_semibold"
        android:gravity="center"
        android:text="Unlock the Power Of Future AI"
        android:textColor="#23262F"
        android:textFontWeight="1000"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/sub_title"
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginEnd="56dp"
        android:fontFamily="@font/popin_regular"
        android:gravity="center"
        android:text="Chat with the smartest AI Future Experience power of AI with us"
        android:textColor="#8E9295"
        android:textFontWeight="300"
        android:textSize="16sp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="154dp"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:layout_marginTop="31dp"
        app:cardCornerRadius="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/arrow_left"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/svg_ob3" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:src="@drawable/svg_ob4" />

            <ImageView
                android:id="@+id/arrow_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/svg_ob2" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>
